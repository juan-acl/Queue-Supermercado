<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="simulacionsupermercado.Controllers.FormularioController"
            prefWidth="600" prefHeight="400">
    <children>

        <Label layoutX="30" layoutY="20" text="Nombre del cliente:" />
        <TextField fx:id="nombreField" layoutX="160" layoutY="16" prefWidth="200"/>

        <Label layoutX="30" layoutY="60" text="Cantidad de artículos:" />
        <Spinner fx:id="articulosSpinner" layoutX="160" layoutY="56" prefWidth="100" />

        <Button fx:id="agregarBtn" layoutX="380" layoutY="35" text="Agregar cliente" onAction="#agregarCliente"/>

        <ListView fx:id="clientesList" layoutX="30" layoutY="110" prefHeight="200" prefWidth="500" />

        <Button fx:id="iniciarSimulacionBtn" layoutX="200" layoutY="330" prefWidth="200" text="Iniciar Simulación" onAction="#iniciarSimulacion"/>

    </children>
</AnchorPane>